{
    "name": "schnittstabil/dartisan",
    "description": "Create and run Illuminate\\Database migration scripts",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "illuminate/database": "^5.2",
        "illuminate/filesystem": "^5.2",
        "kevinlebrun/colors.php": "^1.0",
        "vanilla/garden-cli": "^1.6"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.3",
        "satooshi/php-coveralls": "^1.0",
        "schnittstabil/sugared-cs": "^0.1.0",
        "schnittstabil/sugared-phpunit": "^0.6.0"
    },
    "autoload": {
        "psr-4": { "Schnittstabil\\Dartisan\\": "src" }
    },
    "autoload-dev": {
        "classmap": [
            "tests/temp/migrations",
            "tests/fixtures/migrations"
        ],
        "psr-4": { "Schnittstabil\\Dartisan\\": "tests/Dartisan" }
    },
    "extra": {
        "schnittstabil/sugared-phpmd": {
            "inputPath": "src,tests/Dartisan"
        },
        "schnittstabil/sugared-php_codesniffer": {
            "files": {
                "notPath": [
                    "tests/fixtures",
                    "tests/temp"
                ]
            }
        },
        "schnittstabil\/sugared-php-cs-fixer": {
            "path": {
                "notPath": [
                    "tests/fixtures",
                    "tests/temp"
                ]
            }
        }
    },
    "bin": [
        "dartisan"
    ],
    "scripts": {
        "clean": "rm -rf build/",
        "doc": [
            "sugared-sami",
            "phpmetrics --report-html build/phpmetrics/index.html src/"
        ],
        "lint": [
            "sugared-cs"
        ],
        "test": [
            "sugared-phpunit",
            "composer lint"
        ]
    }
}
